<!DOCTYPE html>
<html>
<head>
    <link href="@Url.Content("~/Content/Bootstrap/bootstrap.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Content/Bootsrtap/bootstrap.min.js")" type="text/javascript" ></script>
    <script src="http://code.jquery.com/jquery-latest.js" type="text/javascript"></script>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="row-fluid">
        <div class="col-md-12">
            <nav class="navbar navbar-default" role="navigation">
                <ul class="nav navbar-nav">
                    <li><a href="/Home/Index">Главная</a></li>
                    @if (Request.IsAuthenticated)
                    {<li><a href="/Home/UserTopics">Мои темы</a></li>}
                    <li><a href="/Home/Topics">Все темы форума</a></li>
                    @if (Request.IsAuthenticated)
                    {<li><a href="/Home/CreateTopic">Создать тему</a></li>}
                    @if (Request.IsAuthenticated)
                    {<li><a href="/Account/Info">Мой профиль</a></li>}
                    @if (ViewBag.Admin)
                    {<li><a href="/Admin/Index">Все пользователи</a></li>}
                    @if (Request.IsAuthenticated)
                    {<li><a href="/Account/LogOff">Выйти</a></li>}
                    @if (!Request.IsAuthenticated)
                    {<li><a href="/Account/Login">Войти</a></li>}
                    @if (!Request.IsAuthenticated)
                    {<li><a href="/Account/Register">Зарегистрироватся</a></li>}
                </ul>
            </nav>

            @RenderBody()



        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
