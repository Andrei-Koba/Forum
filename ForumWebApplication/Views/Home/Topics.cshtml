@model IEnumerable<ForumWebApplication.Models.TopicViewModel>

@{
    ViewBag.Title = "Topics";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Topics</h2>

<p>
    @if (Request.IsAuthenticated)
    { 
          @Html.ActionLink("Create New", "Create")
          @User.Identity.Name
    }
</p>


<div class="row">
    <div class="col-md-7">
        @foreach (var item in Model)
        {
            <div class="col-md-12">
                <div class="col-md-3">
                </div>
                <div class="col-md-6">
                    <h2>@item.Name</h2>
                </div>
                <div class="col-md-3">
                    <h4><b>Постов: </b>
                        <br>@item.PostsCount</h4>
                </div>
                <hr style="color: black">
            </div>
        }
    </div>
    </div>
